{
    "name": "Crunchyroll Plus",
    "description": "Enhance your Crunchyroll experience with the Crunchyroll Plus extension",
    "author": "Milan NICOLAS",
    "version": "1.0.0",
    "manifest_version": 3,
    "icons": {
        "16": "./images/icons/crp_icon_16.png",
        "32": "./images/icons/crp_icon_32.png",
        "48": "./images/icons/crp_icon_48.png",
        "128": "./images/icons/crp_icon_128.png"
    },
    "permissions": [
        "storage",
        "activeTab",
        "tabs"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://static.crunchyroll.com/vilos-v2/web/vilos/player.html*"
            ],
            "exclude_matches": [
                "https://www.crunchyroll.com/forum*"
            ],
            "all_frames": true,
            "js": [
                "js/crp-player.js"
            ],
            "css": [
                "css/crp-player.css"
            ]
        },
        {
            "matches": [
                "https://beta.crunchyroll.com/*",
                "https://www.crunchyroll.com/*"
            ],
            "exclude_matches": [
                "https://www.crunchyroll.com/forum*"
            ],
            "all_frames": true,
            "js": [
                "js/crp-player.js"
            ],
            "css": [
                "css/crp-player.css"
            ]
        }
    ],
    "action": {
        "default_popup": "default_popup.html"
    },
    "background": {
        "service_worker": "js/background.js"
    }
}